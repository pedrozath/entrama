.row: section.collections 
    - for collection in @collections
        article
            - unless collection.products.empty?
                = link_to collection
                    = image_tag collection.art_image(:small), class: "art"
            ul.products
                - for product in collection.different_products
                    li= link_to collection
                        = image_tag product.icon_image(:thumb), class: "product"
            h2.caption 
                = link_to "Coleção #{collection.title}", collection